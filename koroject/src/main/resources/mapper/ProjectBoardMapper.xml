<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="org.kosta.mapper.ProjectBoardMapper">
	<cache />
	
	<insert id="create">
		insert into project(p_id, p_name, p_start, p_end)
			values(NVL((select MAX(p_id) from project)+1,0), #{p_name}, sysdate, sysdate)
	</insert>
	
	<select id="list" resultType="ProjectBoard">
		select * from project
	</select>
	
	<select id="read" resultType="ProjectBoard">
		select * from project
			where p_id = #{p_id}
	</select>
	
	<update id="update">
		update project
			set p_name = #{p_name}, p_memo = #{p_memo}
			where p_id = #{p_id}
	</update>
	
	<delete id="delete">
		delete from project
			where p_id = #{p_id}
	</delete>
	
</mapper>















