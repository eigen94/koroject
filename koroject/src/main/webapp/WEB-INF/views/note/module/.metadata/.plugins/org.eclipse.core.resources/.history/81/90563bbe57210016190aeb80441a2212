	@Test
	public void testListCriteria()throws Exception{
		Criteria cri = new Criteria();
		
		cri.setPage(2);
		cri.setPerPageNum(20);
		
		List<BoardVO> list= dao.listCriteria(cri);
		
		for(BoardVO boardVO : list){
			logger.info(boardVO.getBno()+" : "+boardVO.getTitle());
		}
		
		
		
		
	}
	
}

































